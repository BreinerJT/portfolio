---
import Card from './Card.astro'
import { projects } from '../data.js'
---
<div id='projects' class='py-4'>
  <h2 class='p-2 text-center md:text-start text-2xl md:text-4xl text-cyan-400 font-semibold'>
    Algunos de mis proyectos:
  </h2>
  <ul class='grid gap-8 grid-cols-1 md:grid-cols-2 py-8 px-2 text-white text-center'>
    {
      projects.map(({body, demo, image, link, title}) => (
        <li>
          <Card 
            body={body}
            demo={demo}
            image={image}
            link={link}
            title={title}
          />
        </li>
      ))
    }
  </ul>
</div>