---
import LinkedInButton from './LinkedInButton.astro'
---
<div class='flex flex-col-reverse py-4 gap-2 md:flex-row items-center justify-between'>
  <div class='tracking-wide text-gray-300 text-center md:text-start'>
    <h1 class='text-4xl md:text-6xl bg-gradient-to-r from-red-300 to-red-100 text-transparent bg-clip-text font-semibold'>Breiner Torres</h1>
    <h2 class='text-gray-400 text-2xl md:text-4xl pl-1 pt-4 font-medium tracking-[0.1rem]'>Desarrollador Frontend</h2>
    <div class='pt-6 flex flex-col md:flex-row gap-4 justify-center items-center md:justify-start px-2'>
      <a class='bg-gray-400 p-[0.75rem] rounded-full text-black font-bold md:tracking-wide text-md [&:hover>span]:opacity-100' target='_blank' rel='noopener' href='./assets/CV Breiner Torres.pdf' download='CV Breiner Torres'><span class='opacity-80 transition-opacity duration-300'>Descargar CV</span></a>
      <div class='flex gap-4'>
        <LinkedInButton circular />
        <a class='bg-gray-400 p-[0.75rem] rounded-full text-black [&:hover>svg]:opacity-100' target='_blank' rel='noopener' href="mailto:breinerjtorres@gmail.com" aria-label='Correo Gmail.'>
          <svg class='opacity-70 transition-opacity duration-300' width='32px' height='32px' stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 24 24"><title></title><path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"></path></svg>
        </a>
        <a class='bg-gray-400 p-[0.75rem] rounded-full text-black [&:hover>svg]:opacity-100' target='_blank' rel='noopener' href="https://t.me/breinerjtorres" aria-label='Telegram.'>
          <svg class='opacity-70 transition-opacity duration-300' width="32px" height="32px" viewBox="0 0 32 32" stroke="currentColor" fill="currentColor" stroke-width="0">
            <path d="M16 0.5c-8.563 0-15.5 6.938-15.5 15.5s6.938 15.5 15.5 15.5c8.563 0 15.5-6.938 15.5-15.5s-6.938-15.5-15.5-15.5zM23.613 11.119l-2.544 11.988c-0.188 0.85-0.694 1.056-1.4 0.656l-3.875-2.856-1.869 1.8c-0.206 0.206-0.381 0.381-0.781 0.381l0.275-3.944 7.181-6.488c0.313-0.275-0.069-0.431-0.482-0.156l-8.875 5.587-3.825-1.194c-0.831-0.262-0.85-0.831 0.175-1.231l14.944-5.763c0.694-0.25 1.3 0.169 1.075 1.219z"/>
          </svg>
        </a>    
      </div>
    </div>
  </div>
  <img src='./assets/photo.jpg' class='w-64 h-80 object-fit rounded-full shadow-rounded' alt='Breiner Torres.' />
</div>