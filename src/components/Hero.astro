---
import LinkedInButton from './LinkedInButton.astro'
---
<div class='flex flex-col-reverse py-4 gap-2 md:flex-row items-center justify-between'>
  <div class='tracking-wide text-center md:text-start'>
    <h1 class='text-4xl md:text-6xl text-gray-400 font-semibold'>
      Breiner Torres
    </h1>
    <h2 class='text-cyan-400 text-2xl md:text-4xl pl-1 pt-4 font-medium tracking-[0.1rem]'>
      Desarrollador Frontend
    </h2>
    <div class='pt-6 flex flex-col md:flex-row gap-4 justify-center items-center md:justify-start px-2'>
      <a 
        class='bg-gray-400 p-[0.75rem] border-2 border-transparent rounded-full [&:hover>span]:text-cyan-400 hover:bg-inherit hover:border-cyan-400 transition-colors' 
        target='_blank' 
        rel='noopener' 
        href='./assets/CV Breiner Torres.pdf' 
        download='CV Breiner Torres'
      >
        <span class="font-bold md:tracking-wide text-md transition-colors">
          Descargar CV
        </span>
      </a>
      <div class='flex gap-4 lg:[&>a>svg]:grayscale [&>a:hover>svg]:grayscale-0 [&>a:hover>svg]:scale-125'>
        <LinkedInButton circular />
        <a 
          aria-label='Correo Gmail.' 
          class='bg-gray-400 p-[0.75rem] rounded-full border-2 border-transparent hover:bg-inherit hover:border-cyan-400' 
          target='_blank' 
          rel='noopener' 
          href="mailto:breinerjtorres@gmail.com"
        >
          <svg width='32px' height='32px' viewBox="0 0 48 48"><path fill="#e0e0e0" d="M5.5,40.5h37c1.933,0,3.5-1.567,3.5-3.5V11c0-1.933-1.567-3.5-3.5-3.5h-37C3.567,7.5,2,9.067,2,11v26C2,38.933,3.567,40.5,5.5,40.5z"/><path fill="#d9d9d9" d="M26,40.5h16.5c1.933,0,3.5-1.567,3.5-3.5V11c0-1.933-1.567-3.5-3.5-3.5h-37C3.567,7.5,2,9.067,2,11L26,40.5z"/><path fill="#eee" d="M6.745,40.5H42.5c1.933,0,3.5-1.567,3.5-3.5V11.5L6.745,40.5z"/><path fill="#e0e0e0" d="M25.745,40.5H42.5c1.933,0,3.5-1.567,3.5-3.5V11.5L18.771,31.616L25.745,40.5z"/><path fill="#ca3737" d="M42.5,9.5h-37C3.567,9.5,2,9.067,2,11v26c0,1.933,1.567,3.5,3.5,3.5H7V12h34v28.5h1.5c1.933,0,3.5-1.567,3.5-3.5V11C46,9.067,44.433,9.5,42.5,9.5z"/><path fill="#f5f5f5" d="M42.5,7.5H24H5.5C3.567,7.5,2,9.036,2,11c0,1.206,1.518,2.258,1.518,2.258L24,27.756l20.482-14.497c0,0,1.518-1.053,1.518-2.258C46,9.036,44.433,7.5,42.5,7.5z"/><path fill="#e84f4b" d="M43.246,7.582L24,21L4.754,7.582C3.18,7.919,2,9.297,2,11c0,1.206,1.518,2.258,1.518,2.258L24,27.756l20.482-14.497c0,0,1.518-1.053,1.518-2.258C46,9.297,44.82,7.919,43.246,7.582z"/></svg>
        </a>
        <a 
          aria-label='Telegram.' 
          class='bg-gray-400 p-[0.75rem] rounded-full border-2 border-transparent hover:bg-inherit hover:border-cyan-400' 
          target='_blank' 
          rel='noopener' 
          href="https://t.me/breinerjtorres"
