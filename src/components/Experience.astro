---
import { experiences } from '../data'
---

<article class="p-4 px-2">
  <h2 class='text-center pt-2 md:text-start md:pt-0 text-2xl md:text-4xl text-cyan-400 font-semibold'>
    Experiencia:
  </h2>
  {
    experiences.map(experience => (
      <div class="pt-8 px-2">
        <p class="text-xl text-cyan-400 font-semibold">{experience.role}</p>
        <div class="flex flex-col sm:flex-row justify-between pb-2">
          <h3 class="text-xl text-gray-400 font-semibold">{experience.place}</h3>
          <p class="text-gray-400 font-semibold">{experience.start} - {experience.end}</p>
        </div>
        <ul class='pl-6'>
          {
            experience.accomplishments.map(accomplishment => (
              <li class="list-disc text-sm font-bold text-gray-400 leading-relaxed">
                {accomplishment}  
              </li>
            ))
          }
        </ul>
      </div>
    ))
  }
</article>